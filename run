#!/usr/bin/env python3

import sys
import subprocess

def main():
    if len(sys.argv) < 2:
        print("Error: No mode specified.")
        return 1

    mode = sys.argv[1]
    if mode == "install":
        # MODE 1: INSTALL DEPENDENCIES
        subprocess.run("npm install", shell=True)
        subprocess.run("export $(cat .env | xargs)", shell=True)
        return 0
    elif mode == "test":
        # MODE 3: RUN TESTS
        # TODO: Add code to run tests
        pass
    else:
        # MODE 2: RANK MODULES
        if len(sys.argv) < 2:
            print("Arg 1 needs to be URL to input file or one of")
            return 1

        file_path = sys.argv[1]
        try:
            file = open(file_path, "r")
        except FileNotFoundError:
            print(f"Error: File not found at path: {file_path}")
            return 1

        subprocess.run("tsc src/*.ts", shell=True)

        with file:
            for line in file:
                # remove newline character from the end of the line
                line = line.strip()

                # create the command string
                command = f"node src/main.js {line}"

                # call main with each URL as argument
                print(f"Running command -> {command}")
                subprocess.run(command, shell=True)


if __name__ == "__main__":
    main()